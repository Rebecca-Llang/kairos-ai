{
  "name": "kairos-ai",
  "description": "An AI companion for creative, introspective, and emotionally intelligent conversations.",
  "version": "0.0.1",
  "scripts": {
    "start": "PYTHONPATH=src/python python3 src/python/kairos_ai.py",
    "test": "PYTHONPATH=src/python python3 -m unittest discover src/python/tests/ -v",
    "test:models": "PYTHONPATH=src/python python3 src/python/tests/test_models.py",
    "test:operations": "PYTHONPATH=src/python python3 src/python/tests/test_operations.py",
    "test:integration": "PYTHONPATH=src/python python3 src/python/tests/test_database_integration.py",
    "test:migration": "PYTHONPATH=src/python python3 src/python/tests/test_migration.py",
    "migrate": "cd src/python && PYTHONPATH=. python3 migrations/migrate_json_to_sqlite.py",
    "debug": "PYTHONPATH=src/python KAIROS_DEBUG=true python3 src/python/kairos_ai.py",
    "lint": "PYTHONPATH=src/python python3 -m flake8 src/python/",
    "format": "PYTHONPATH=src/python python3 -m black src/python/"
  },
  "keywords": [
    "AI",
    "companion",
    "creative",
    "introspection",
    "emotional-intelligence",
    "cycle-syncing",
    "archetypes",
    "python",
    "sqlite",
    "machine-learning"
  ],
  "author": "Rebecca Lang (Rebecca-Llang) and Red (ZanKris)",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.0"
  }
}
