{
  "name": "kairos-ai",
  "description": "An AI companion for creative, introspective, and emotionally intelligent conversations.",
  "version": "0.0.1",
  "scripts": {
    "start": "python3 src/python/kairos_ai.py",
    "reset": "echo '[]' > src/python/the-spellbook.json && echo '[]' > src/python/chat-history.json",
    "debug": "KAIROS_DEBUG=true python3 src/python/kairos_ai.py",
    "test": "python3 tests/run_tests.py",
    "test:core": "python3 tests/test_core.py",
    "test:data": "python3 tests/test_data.py",
    "test:config": "python3 tests/test_config.py",
    "test:quick": "python3 -c \"import ast; ast.parse(open('src/python/kairos_ai.py').read()); print('âœ… Kairos syntax is valid')\"",
    "setup": "mkdir -p frontend && cd frontend && npm create vite@latest . -- --template react-ts",
    "dev": "concurrently \"npm start\" \"cd frontend && npm run dev\""
  },
  "keywords": [
    "AI",
    "companion",
    "creative",
    "introspection",
    "emotional-intelligence",
    "cycle-syncing",
    "archetypes"
  ],
  "author": "Rebecca Lang (Rebecca-Llang) and Red (ZanKris)",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^0.34.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.0"
  }
}